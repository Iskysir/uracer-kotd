#ifdef GL_ES
#define LOWP lowp
#define MED mediump
precision mediump float;
#else
#define LOWP
#define MED
#endif

uniform MED sampler2D u_texture0;
//uniform float VignetteIntensity;
uniform float VignetteX;
uniform float VignetteY;

varying vec2 v_texCoords;

const vec2 Mid = vec2(0.5, 0.5);

void main() {
	vec3 rgb = texture2D(u_texture0, v_texCoords).xyz;
	float d = distance(v_texCoords, Mid);
	rgb *= smoothstep(VignetteX, VignetteY, d);
	gl_FragColor = vec4(rgb,1);
}